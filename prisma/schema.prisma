// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Tutor {
    tutor_id  int     @default(cuid()) @id
    firstName String
    lastName  String 
    email     String  @unique
    password  String 

}

model Tutee {
    tutee_id  int     @default(cuid()) @id
    firstName String
    lastName  String 
    email     String
    password  String 
}

model Meeting {
    meeting_id int    @default(cuid()) @id
    time DateTime
    location String
    tutor_id int
    tutee_id int @default(null) @id
}

model Teaches {
    tutor_id int
    course_name String
}

